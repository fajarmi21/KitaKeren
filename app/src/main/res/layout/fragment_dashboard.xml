<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="fba.fajarbahtera.kitakeren.fragment.DashboardFragment"
        android:background="#00000000">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <technolifestyle.com.imageslider.FlipperLayout
                android:id="@+id/flipper_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

<!--            <kr.docs.smartad.SmartAdBanner-->
<!--                android:id="@+id/mAd"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                app:adv_AdOrder="Google"-->
<!--                app:adv_BannerSize="Rectangle"-->
<!--                app:adv_IsAutoStart="true" />-->
        </RelativeLayout>

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-2433285891162124/8484146052">
        </com.google.android.gms.ads.AdView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvDashh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/rl2"
                tools:listitem="@layout/list_dashboard" />
            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#d3d3d3"
                    app:cardBackgroundColor="#fff"
                    app:cardCornerRadius="15dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="-8dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/link3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/judul_news"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:fontFamily="@font/aqua"
                                    android:text="-"
                                    android:textColor="@color/black"
                                    android:textSize="18sp" />
                                <TextView
                                    android:id="@+id/news"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/aqua"
                                    android:layout_marginStart="11dp"
                                    android:text="-"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:textStyle="italic" />
                            </LinearLayout>

                            <View
                                android:id="@+id/divider2_super"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginVertical="10dp"
                                android:background="#C4BFBF" />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <ImageView
                                    android:id="@+id/link2"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/facebook"/>
                                <ImageView
                                    android:id="@+id/link1"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/instagram"/>
                                <ImageView
                                    android:id="@+id/link4"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/yt2"/>
                                <ImageView
                                    android:id="@+id/web"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/web"/>
                                <ImageView
                                    android:id="@+id/email"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/email"/>
                                <ImageView
                                    android:id="@+id/twitter"
                                    android:layout_width="59dp"
                                    android:layout_height="59dp"
                                    android:background="@drawable/twitter"/>
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</layout>